<UserControl x:Class="TextileApp.LicenseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextileApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <Label>Select File:</Label>
        <Label Foreground="Red" x:Name="error_text" Visibility="Hidden">*Invalid License file</Label>
        <TextBox FontSize="20" x:Name="filePath_text" IsReadOnly="True"/>
        <Button x:Name="upload_button" Click="uploadEvent">Upload</Button>
        <Button x:Name="submit_button" Click="submitEvent" Visibility="Collapsed">Submit</Button>
    </StackPanel>
</UserControl>
